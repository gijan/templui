package showcase

import "github.com/gijan/templui/pkg/components"

templ InputWithLabel() {
	<div class="w-full max-w-sm grid gap-2">
		@components.Label(components.LabelProps{Text: "Email", For: "email"})
		@components.Input(components.InputProps{
			ID:          "email",
			Type:        "email",
			Placeholder: "Email",
		})
	</div>
}
